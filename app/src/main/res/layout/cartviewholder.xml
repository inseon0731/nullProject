<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageCart"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:id="@+id/textMuseumCart"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageCart" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:id="@+id/textExhibitCart"
        android:layout_below="@+id/textMuseumCart"
        android:layout_toEndOf="@+id/imageCart" />

    <Button
        android:text="가이드"
        android:padding="0dp"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:id="@+id/button4"
        android:background="@drawable/midgray"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_below="@+id/textExhibitCart"
        android:layout_toEndOf="@+id/imageCart"
        android:layout_alignBottom="@+id/imageCart"/>

    <Button
        android:text="도록"
        android:padding="0dp"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:id="@+id/button5"
        android:background="@drawable/midgray"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_below="@+id/textExhibitCart"
        android:layout_toEndOf="@+id/button4"
        android:layout_alignBottom="@+id/button4" />
</RelativeLayout>