<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageExhibition"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:id="@+id/nameExhibition"
        android:layout_toEndOf="@+id/imageExhibition" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:id="@+id/contextExhibition"
        android:layout_alignBottom="@+id/imageExhibition"
        android:layout_toEndOf="@+id/imageExhibition" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:id="@+id/dateExhibition"
        android:layout_below="@+id/nameExhibition"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageExhibition" />
</RelativeLayout>