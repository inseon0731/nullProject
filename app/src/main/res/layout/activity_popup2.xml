<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_play"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hong_inseon.projectlouvre.PlayActivity"
    android:background="@color/colorBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/ms5_ex13_pc9"
            android:layout_width="match_parent"
            android:layout_height="191dp"
            android:layout_weight="0.49"
            app:srcCompat="@drawable/pic2" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="207dp"
            android:layout_weight="0.52"
            android:paddingBottom="@dimen/dimen16"
            android:paddingLeft="@dimen/dimen16"
            android:paddingRight="@dimen/dimen16"
            android:paddingTop="@dimen/dimen16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="@string/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/doroktext2"/>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:orientation="vertical"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:text="0 : 00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textplaystart2"
                android:textSize="10sp"/>

            <SeekBar
                android:layout_width="wrap_content"
                android:id="@+id/seekBar2"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:text="0 : 00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textplaylast2"
                android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:orientation="vertical"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.37">

            <ImageButton
                android:id="@+id/playmap2"
                android:onClick="g2c"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:background="@drawable/map_white"/>

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/playback2"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:background="@drawable/play_back"/>

            <ImageButton
                android:id="@+id/stop2"
                android:onClick="onClickPopupB2"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:background="@drawable/stop"/>

            <ImageButton
                android:id="@+id/playpause2"
                android:onClick="onClickPopupB2"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:background="@drawable/play"/>

            <ImageButton
                android:id="@+id/playpre2"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:background="@drawable/play_pre"/>

            <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/playmenu2"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:background="@drawable/menu_white"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>