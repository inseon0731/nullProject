<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_listview_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hong_inseon.projectlouvre.ListviewItem"
    android:orientation="horizontal"
    android:gravity="center_vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/louvre"
            android:id="@+id/mPhoto"
            android:layout_weight="1"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/mSubject"
            android:layout_weight="0.66"
            android:textStyle="normal|bold"
            android:textColor="@android:color/background_light"
            android:layout_alignBottom="@+id/mPhoto"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:background="#95585858"
            android:textSize="15sp"/>

        <TextView
            android:text="TextView"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:id="@+id/mProcess"
            android:layout_marginTop="23dp"
            android:layout_alignTop="@+id/mPhoto"
            android:layout_alignParentStart="true"
            android:background="#95585858"
            android:textColor="@android:color/background_light"
            android:textSize="12sp"
            android:textAlignment="center"/>


</RelativeLayout>
