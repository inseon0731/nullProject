<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_play"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hong_inseon.projectlouvre.PlayActivity"
    android:background="?android:attr/colorActivatedHighlight">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <WebView
            android:layout_width="match_parent"
            android:layout_height="191dp"
            android:layout_weight="0.49"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="207dp"
            android:layout_weight="0.52">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView"/>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:text="2:01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_weight="1"/>

            <SeekBar
                android:layout_width="270dp"
                android:id="@+id/seekBar"
                android:layout_height="wrap_content"
                />

            <TextView
                android:text="0:24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_weight="0.37">

            <ImageButton
                android:id="@+id/playmap"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:background="@drawable/map_white"
                android:layout_alignTop="@+id/play"/>

            <ImageButton
                android:id="@+id/playback"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:background="@drawable/play_back"
                android:layout_alignTop="@+id/play"/>

            <ImageButton
                android:id="@+id/play"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:background="@drawable/play_white"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/playback"/>

            <ImageButton
                android:id="@+id/playpre"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:background="@drawable/play_pre"
                android:layout_alignTop="@+id/play"
                android:layout_toEndOf="@+id/play"/>

            <ImageButton
                android:id="@+id/playmenu"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:background="@drawable/menu_white"
                android:layout_alignTop="@+id/play"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
